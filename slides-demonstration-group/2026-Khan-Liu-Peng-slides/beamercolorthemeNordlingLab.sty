% Black, NLdarkblue, NLmiddleblue, NLlightblue
\setbeamercolor{palette primary}{use={normal text},fg=black,bg=normal text.bg}
\setbeamercolor{palette secondary}{use={normal text},fg=NLdarkblue,bg=normal text.bg}
\setbeamercolor{palette tertiary}{use={normal text},fg=NLmiddleblue,bg=normal text.bg}
\setbeamercolor{palette quaternary}{use={normal text},fg=NLlightblue,bg=normal text.bg}

% Inner theme elements
\setbeamercolor*{block body}{bg=normal text.bg!90!black}
\setbeamercolor*{block body alerted}{bg=normal text.bg!90!black}
\setbeamercolor*{block body example}{bg=normal text.bg!90!black}
\setbeamercolor*{block title}{parent=structure,bg=normal text.bg!75!black}
\setbeamercolor*{block title alerted}{use={normal text,alerted text},fg=alerted text.fg!75!normal text.fg,bg=normal text.bg!75!black}
\setbeamercolor*{block title example}{use={normal text,example text},fg=example text.fg!75!normal text.fg,bg=normal text.bg!75!black}

%\setbeamercolor{item projected}{fg=black}

% Sidebar elements
\setbeamercolor*{sidebar}{parent=palette primary}
\setbeamercolor{palette sidebar primary}{use=normal text,fg=black}
\setbeamercolor{palette sidebar secondary}{use=normal text,fg=NLdarkblue}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=NLmiddleblue}
\setbeamercolor{palette sidebar quaternary}{use=normal text,fg=NLlightblue}

\setbeamercolor*{separation line}{} %fg=NLdarkgrey}
%\setbeamercolor*{fine separation line}{fg=NLlightgrey}

% Define additional elements not found in Beamer color theme Albatross
\setbeamercolor*{titlelike}{use={normal text},fg=NLdarkblue}
\setbeamercolor*{frametitle}{parent=titlelike,fg=NLdarkblue} 
\setbeamercolor*{framesubtitle}{parent=frametitle} 
\setbeamercolor*{author}{fg=black}
\setbeamercolor*{date in head/foot}{fg=NLdarkblue} 
\setbeamercolor*{page number in head/foot}{fg=NLdarkblue} 
\setbeamercolor*{headline}{fg=white}
\setbeamercolor*{footline}{fg=white,bg=green}
\setbeamercolor*{item}{fg=black}

\mode<all>